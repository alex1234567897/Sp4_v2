<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:controller="com.example.icesp4.HighscoreSubmitMenuController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="15" styleClass="menuBG"
      prefWidth="672" prefHeight="764"
      stylesheets="@Style.css">

    <Label fx:id="scoreLabel" text="SCORE: 0" styleClass="label"/>
    <TextField fx:id="nameField" promptText="AAA" styleClass="text-field"/>
    <Label fx:id="statusLabel" text="" styleClass="label"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="SAVE" onAction="#onSave" onMouseEntered="#playHoverSound" styleClass="button"/>
        <Button text="SKIP" onAction="#onSkip" onMouseEntered="#playHoverSound" styleClass="button"/>
    </HBox>

</VBox>